<?xml version="1.0" encoding="utf-8"?>

<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rg_sticker_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <RadioButton
        android:id="@+id/rb_sticker_black"
        android:layout_width="@dimen/text_sticker_choice_size"
        android:layout_height="@dimen/text_sticker_choice_size"
        android:layout_marginLeft="16dp"
        android:background="@drawable/selector_text_sticker_black"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        />

    <RadioButton
        android:id="@+id/rb_sticker_red"
        android:layout_width="@dimen/text_sticker_choice_size"
        android:layout_height="@dimen/text_sticker_choice_size"
        android:layout_marginLeft="24dp"
        android:background="@drawable/selector_text_sticker_red"
        android:button="@null"
        android:gravity="center"
        />

    <RadioButton
        android:id="@+id/rb_sticker_yellow"
        android:layout_width="@dimen/text_sticker_choice_size"
        android:layout_height="@dimen/text_sticker_choice_size"
        android:layout_marginLeft="24dp"
        android:background="@drawable/selector_text_sticker_yellow"
        android:button="@null"
        android:gravity="center"
        />

    <RadioButton
        android:id="@+id/rb_sticker_green"
        android:layout_width="@dimen/text_sticker_choice_size"
        android:layout_height="@dimen/text_sticker_choice_size"
        android:layout_marginLeft="24dp"
        android:background="@drawable/selector_text_sticker_green"
        android:button="@null"
        android:gravity="center"
        />

    <RadioButton
        android:id="@+id/rb_sticker_blue"
        android:layout_width="@dimen/text_sticker_choice_size"
        android:layout_height="@dimen/text_sticker_choice_size"
        android:layout_marginLeft="24dp"
        android:background="@drawable/selector_text_sticker_blue"
        android:button="@null"
        android:gravity="center"
        />

    <RadioButton
        android:id="@+id/rb_sticker_pink"
        android:layout_width="@dimen/text_sticker_choice_size"
        android:layout_height="@dimen/text_sticker_choice_size"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_text_sticker_pink"
        android:button="@null"
        android:gravity="center"
        />
</RadioGroup>
