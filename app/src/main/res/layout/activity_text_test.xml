<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <me.jp.sticker.stickerview.view.FitTextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Matches Width!"
            />

        <me.jp.sticker.stickerview.view.FitTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="And Height!"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <me.jp.sticker.stickerview.view.FitTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Limit to only 2 lines no matter how much you type!"
            android:maxLines="2"
            android:layout_weight="1"
            />

        <me.jp.sticker.stickerview.view.FitTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Works with padding and gravity!"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="10dp"
            />
    </LinearLayout>

    <me.jp.sticker.stickerview.view.FitTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Don't forget your compound drawables!"
        android:gravity="center_vertical"
        />

    <me.jp.sticker.stickerview.view.FitTextView
        android:id="@+id/font_sample"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="And Fancy Fonts"
        android:gravity="center_horizontal"
        />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_item"
        />

</LinearLayout>
