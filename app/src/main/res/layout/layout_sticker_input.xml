<?xml version="1.0" encoding="utf-8"?>
<me.jp.sticker.widget.edit.StickerInputView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:id="@+id/layout_sticker_input"
                                            android:layout_width="match_parent"
                                            android:layout_height="48dp"
                                            android:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/iv_sticker_style"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:background="@android:color/holo_red_light"/>

    <EditText
        android:id="@+id/ed_sticker_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_vertical"
        android:text="9/60"/>
</me.jp.sticker.widget.edit.StickerInputView>