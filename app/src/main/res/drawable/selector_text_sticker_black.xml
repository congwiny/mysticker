<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/text_sticker_black"/>
                    <stroke android:width="1dp"
                            android:color="@color/text_sticker_white"/>
                </shape>
            </item>
            <item
                android:bottom="6dp"
                android:drawable="@drawable/ic_sticker_color_selected"
                android:left="6dp"
                android:right="6dp"
                android:top="6dp"/>
        </layer-list>
    </item>


    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/text_sticker_black"/>
            <stroke android:width="1dp"
                    android:color="@color/text_sticker_white"/>
        </shape>
    </item>
</selector>