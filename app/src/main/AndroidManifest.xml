<?xml version="1.0" encoding="utf-8"?>
<manifest package="me.jp.sticker"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".StickerApp">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".StickerEffectActivity"
            android:label="@string/title_activity_sticker_effect"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".StickerTextActivity">
        </activity>
        <activity android:name=".StickerActivity">
        </activity>
        <activity android:name=".StickerAnimActivity">

        </activity>
    </application>

</manifest>